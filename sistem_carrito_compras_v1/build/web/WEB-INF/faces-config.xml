<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
        
    <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>producto</from-outcome>
        <to-view-id>/producto/List.xhtml</to-view-id>
        </navigation-case>
        
    <navigation-case>
        <from-outcome>carrito</from-outcome>
        <to-view-id>/carrito/List.xhtml</to-view-id>
    </navigation-case>
    
    <navigation-case>
        <from-outcome>orden</from-outcome>
        <to-view-id>/orden/List.xhtml</to-view-id>
    </navigation-case>
    
    <navigation-case>
        <from-outcome>pago</from-outcome>
        <to-view-id>/pago/List.xhtml</to-view-id>
    </navigation-case>
    
    <navigation-case>
        <from-outcome>registro_usuario</from-outcome>
        <to-view-id>/usuarios/Create.xhtml</to-view-id>
    </navigation-case>
    
    
</navigation-rule>
</faces-config>
